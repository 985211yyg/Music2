<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/song_detail_item_singer_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/song_detail_item_singer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_singer_icon"
            android:gravity="center"
            android:text="歌手：" />


        <TextView
            android:id="@+id/song_detail_item_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_singer"
            android:gravity="center"
            android:text="迈克尔.杰克逊" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/music" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/song_detail_item_album_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/song_detail_item_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_album_icon"
            android:gravity="center"
            android:text="歌手：" />


        <TextView
            android:id="@+id/song_detail_item_album_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_album"
            android:gravity="center"
            android:text="迈克尔.杰克逊" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/music" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/song_detail_item_song_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/song_detail_item_song_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_song_info_icon"
            android:gravity="center"
            android:text="单曲详情：" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/music" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/song_detail_item_radio_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/song_detail_item_radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_radio_icon"
            android:gravity="center"
            android:text="相似单曲电台：" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/music" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/song_detail_item_song_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/song_detail_item_song_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_toRightOf="@+id/song_detail_item_song_list_icon"
            android:gravity="center"
            android:text="包含此单曲的热门歌单：" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/music" />

    </RelativeLayout>

</LinearLayout>