<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="@dimen/dp_6"
    android:layout_marginRight="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_3"
    android:background="@android:color/white"
    android:elevation="@dimen/dp_2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ranging_item_icon"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:src="@drawable/album" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ranging_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ranging_item_first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:text="1 Y.M.C.A. - The Minions" />

        <TextView
            android:id="@+id/ranking_item_second"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:text="2 Little Sack Of Sugar - Elizabeth Mitchell" />

        <TextView
            android:id="@+id/ranging_item_third"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:text="3 Angelina - Lou Bega" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_4"
        android:src="@drawable/arrow_right_gray" />

</RelativeLayout>