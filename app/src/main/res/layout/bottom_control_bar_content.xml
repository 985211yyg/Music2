<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <com.example.yungui.music.widget.CircleImageView
        android:id="@+id/circle_cd"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_4"
        android:padding="@dimen/dp_4"
        android:transitionName="shareView"
        app:civ_border_color="@color/barColor"
        app:civ_border_width="@dimen/dp_4">

    </com.example.yungui.music.widget.CircleImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_toRightOf="@+id/circle_album"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_bar_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔鬼中的天使"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bottom_bar_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔鬼中的天使" />
    </LinearLayout>

</LinearLayout>